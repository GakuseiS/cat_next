{
  "name": "cat_energy_mern",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "heroku-postbuild": "npm run install-client && npm run build",
    "start": "concurrently \"npm run server\" \"bun run --cwd client start\"",
    "server": "ts-node app.ts",
    "server:dev": "nodemon app.ts --ignore client",
    "client": "bun run --cwd client dev",
    "install-client": "bun install --cwd client",
    "build": "bun run --cwd client build",
    "dev": "concurrently \"npm run server:dev\" \"bun run --cwd client dev\""
  },
  "keywords": [
    "mern"
  ],
  "author": "Ilya Spiridonov",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "4.4.0",
    "bcrypt": "^5.0.1",
    "concurrently": "^7.4.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "express-validator": "^6.11.1",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.6.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "nodemon": "^2.0.7",
    "prisma": "^4.4.0",
    "typescript": "^4.8.4"
  }
}
